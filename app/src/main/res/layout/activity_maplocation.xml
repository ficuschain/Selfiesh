<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MapsActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#30D5C8">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="300dp" android:id="@+id/map"
        tools:context="sample.google.com.cloudvision.MapLocationActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
    <TextView
        android:id="@+id/textview1"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:layout_weight="0.41"
        android:textStyle="bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#30D5A0"

        />
    <TextView
        android:id="@+id/desctxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
<Button
    android:gravity="center"
    android:id="@+id/database_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Start Hunt"/>

</LinearLayout>


